<%- include('./partials/header'); %>

<body class="bg-white">
    <div class="flex flex-col min-h-screen">
        <header class="bg-white shadow-xl">
            <div class="max-w-7xl flex itmes-center justify-between mx-auto py-6 px-4 sm:px-6 lg:px-8">
                <h1 class="text-2xl font-bold text-blue-600"><a href="/admin/login"><i class="ri-arrow-left-s-line"></i></a> Admin Dashboard</h1>
                <a href="/admin/products" class="mt-2 text-blue-600">See all products</a>
            </div>
        </header>

        <main class="flex-1 overflow-y-auto">
            <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
          
                <div class="mb-8 bg-white shadow-lg rounded-lg p-6">
                    <h2 class="text-2xl font-semibold text-gray-800">Dashboard Overview</h2>
                    <div class="mt-4 grid grid-cols-1 md:grid-cols-3 gap-6">
                  
                        <div class="bg-[#f7f7f7] p-6 rounded-lg shadow-lg transition-all hover:scale-105 duration-300">
                            <h3 class="text-lg font-medium text-gray-600">Total Products</h3>
                            <p class="mt-2 text-3xl font-bold text-green-600 animate-pulse">
                                <%= prodcount %>
                            </p>
                        </div>
                       
                        <div class="bg-[#f7f7f7] p-6 rounded-lg shadow-lg transition-all hover:scale-105 duration-300">
                            <h3 class="text-lg font-medium text-gray-600">Total Categories</h3>
                            <p class="mt-2 text-3xl font-bold text-blue-600 animate-pulse">
                                <%= categcount %>
                            </p>
                        </div>
                  
                        <div class="bg-[#f7f7f7] p-6 rounded-lg shadow-lg transition-all hover:scale-105 duration-300">
                            <h3 class="text-lg font-medium text-gray-600">New Orders</h3>
                            <p class="mt-2 text-3xl font-bold text-orange-600 animate-pulse"><%= Math.floor( Math.random()*15)  %></p>
                        </div>
                    </div>
                </div>

               
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">

             
                    <div class="bg-white shadow-lg rounded-lg p-6 transition-all hover:scale-105 duration-300">
                        <h2 class="text-2xl font-semibold text-gray-800">Manage Products</h2>
                        <form enctype="multipart/form-data" autocomplete="off" class="mt-4" action="/products" method="POST">
                            <h3 class="text-lg font-medium text-gray-700">Create Product</h3>
                            <div class="mt-2">
                                <input type="text" name="name" placeholder="Product Name" required class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:outline-none">
                            </div>
                            <div class="mt-2">
                                <input type="number" name="price" placeholder="Product Price" required class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:outline-none">
                            </div>
                            <div class="mt-2">
                                <input type="text" name="category" placeholder="Category" required class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:outline-none">
                            </div>
                            <div class="mt-2">
                                <textarea name="description" placeholder="Product Description" rows="4" class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:outline-none"></textarea>
                            </div>
                            <div class="mt-2">
                                <input type="number" name="stock" placeholder="Stock Quantity" required class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:outline-none">
                            </div>
                            <div class="mt-2">
                                <input type="file" name="image" required class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:outline-none">
                            </div>
                            <div class="mt-4">
                                <button type="submit" class="w-full bg-green-600 text-white py-2 px-4 rounded-lg hover:bg-green-700 transition-all duration-200">
                                    Create Product
                                </button>
                            </div>
                        </form>

               
                        <form autocomplete="off" class="mt-6" action="/products/delete" method="POST">
                            <h3 class="text-lg font-medium text-gray-700">Delete Product</h3>
                            <div class="mt-2">
                                <input type="text" name="product_id" placeholder="Product ID" required class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:outline-none">
                            </div>
                            <div class="mt-4">
                                <button type="submit" class="w-full bg-red-600 text-white py-2 px-4 rounded-lg hover:bg-red-700 transition-all duration-200">
                                    Delete Product
                                </button>
                            </div>
                        </form>
                    </div>

                  
                    <div class="bg-white shadow-lg rounded-lg p-6 transition-all hover:scale-105 duration-300">
                        <h2 class="text-2xl font-semibold text-gray-800">Manage Categories</h2>
                        <form autocomplete="off" class="mt-4" action="/categories/create" method="POST">
                            <h3 class="text-lg font-medium text-gray-700">Create or Update Category</h3>
                            <div class="mt-2">
                                <input type="text" name="name" placeholder="Category Name" required class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none">
                            </div>
                            <div class="mt-4">
                                <button type="submit" class="w-full bg-blue-600 text-white py-2 px-4 rounded-lg hover:bg-blue-700 transition-all duration-200">
                                    Save Category
                                </button>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </main>
    </div>
</body>

<%- include('./partials/footer'); %>
